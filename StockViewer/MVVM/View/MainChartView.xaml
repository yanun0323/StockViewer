<UserControl x:Class="StockViewer.MVVM.View.MainChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StockViewer.MVVM.View"
             xmlns:viewModel="clr-namespace:StockViewer.MVVM.ViewModel" 
             xmlns:core="clr-namespace:StockViewer.Core" 
             d:DataContext="{d:DesignInstance Type=viewModel:MainChartViewModel}"
             mc:Ignorable="d">
    <Border x:Name="MainChartBorder"
            CornerRadius="20"
            Margin="5,0"
            Background="{Binding ElementName=MainChart, Path=Background}">
        <Grid x:Name="MainChartGrid" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Popup x:Name="InfoPopup" IsOpen="{Binding InfoPopShow}" Placement="Relative" AllowsTransparency="True" Opacity="0">
                <Border x:Name="InfoPopupBorder" BorderThickness="1.5" CornerRadius="10" BorderBrush="PowderBlue" Background="White" Opacity="0.95"
                        Width="101" Height="150">
                    <StackPanel>
                        <Label Content="{Binding InfoDate}" Margin="0,0,0,0" HorizontalAlignment="Right"/>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel>
                                <Label Content="開"/>
                                <Label Content="高"/>
                                <Label Content="低"/>
                                <Label Content="收"/>
                                <Label Content="漲"/>
                                <Label Content=""/>
                                <Label Content="量"/>

                                <StackPanel.Resources>
                                    <Style TargetType="Label">
                                        <Setter Property="Margin" Value="0,-5.5"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="Foreground" Value="#222"/>
                                    </Style>
                                </StackPanel.Resources>
                            </StackPanel>
                            <StackPanel Width="75">
                                <Label Content="{Binding InfoVM.Candle.Parameter.Tr.Start}"/>
                                <Label Content="{Binding InfoVM.Candle.Parameter.Tr.Max}"/>
                                <Label Content="{Binding InfoVM.Candle.Parameter.Tr.Min}"/>
                                <Label Content="{Binding InfoVM.Candle.Parameter.Tr.End}"
                                       Foreground="{Binding InfoVM.Candle.Parameter.Tr.mColor}" />
                                <Label Content="{Binding InfoVM.Candle.Parameter.Tr.mSpread}"/>
                                <Label Content="{Binding InfoVM.Candle.Parameter.Tr.mRatio}"/>
                                <Label Content="{Binding InfoVM.Candle.Parameter.Tr.mVolume}"/>
                                <StackPanel.Resources>
                                    <Style TargetType="Label">
                                        <Setter Property="Margin" Value="0,-5.5"/>
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Foreground" Value="#222"/>
                                    </Style>
                                </StackPanel.Resources>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Popup>

            <ContentControl Grid.Column="0" Grid.ColumnSpan="2"
                            VerticalAlignment="Top"
                            Content="{Binding ChartGridVM}"/>

            <ItemsControl x:Name="CandleControl" Grid.Column="0"
                          ItemsSource="{Binding CandleVMCollection}" 
                          FlowDirection="RightToLeft"
                          BorderThickness="3">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!-- The default for an ItemsControl is a StackPanel with a vertical orientation -->
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SizeChanged">
                        <core:EventCommandAction Command="{Binding SizeChangedCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ItemsControl>
            
            <Grid Grid.Column="1">
            </Grid>
        </Grid>

        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseWheel">
                <core:EventCommandAction Command="{Binding MouseWheelCommand}"/>
            </i:EventTrigger>
            <i:EventTrigger EventName="MouseUp">
                <core:EventCommandAction Command="{Binding MouseUpCommand}"/>
            </i:EventTrigger>
            <i:EventTrigger EventName="MouseMove">
                <core:EventCommandAction Command="{Binding MouseMoveCommand}"/>
            </i:EventTrigger>
            <i:EventTrigger EventName="Loaded">
                <i:InvokeCommandAction Command="{Binding LoadedCommand}"
                                       CommandParameter="{Binding ElementName=MainChartGrid}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>
    </Border>
</UserControl>
